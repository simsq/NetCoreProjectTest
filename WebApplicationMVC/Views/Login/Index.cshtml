
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
    <meta charset="utf-8">
    <title>Api Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- CSS -->
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=PT+Sans:400,700'>
    <link href="~/css/logincss/reset.css" rel="stylesheet" />
    <link href="~/css/logincss/supersized.css" rel="stylesheet" />
    <link href="~/css/logincss/style.css" rel="stylesheet" />

</head>

<body>

    <div class="page-container" style="">
        <h1>Login</h1>
        <form action="" method="post">
            <input type="text" name="username" id="userName" class="username" placeholder="Username">
            <input type="password" name="password" id="passWord" class="password" placeholder="Password">
            <button id="login" type="button">Sign me in</button>
            <div class="error"><span>+</span></div>
        </form>
        <div class="connect">

        </div>
    </div>
    <div align="center">官网<a href="http://www.colipu.com/" target="_blank" title="Colipu">科力普</a></div>

    <!-- Javascript -->
    <script src="~/js/loginjs/jquery-1.8.2.min.js"></script>
    <script src="~/js/loginjs/supersized.3.2.7.min.js"></script>
    <script src="~/js/loginjs/supersized-init.js"></script>
    <script src="~/js/loginjs/scripts.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#login").click(function () {
                $.post("/Login/Login", { "userName": $("#userName").val(), "passWord": $("#passWord").val() }, function (data) {
                    
                });

            });
        });
    </script>
</body>
</html>

